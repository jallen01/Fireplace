<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="page-header">
      <h1>User Settings</h1>
    </div>

    <div class="row">
      <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
          <li class="active"><%= link_to "Tags", "#tag-tab", data: {toggle: "tab"} %></li>
          <li><%= link_to "Time Ranges", "#time-range-tab", data: {toggle: "tab"} %></li>
          <li><%= link_to "Day Ranges", "#day-range-tab", data: {toggle: "tab"} %></li>
          <li><%= link_to "Locations", "#location-tab", data: {toggle: "tab"} %></li>
        </ul>
      </div>

      <div class="col-md-7 col-md-offset-1 tab-content">
        <div class="tab-pane active" id="tag-tab"><%= render "tags/index" %></div>
        <div class="tab-pane" id="time-range-tab"><%= render "time_ranges/index" %></div>
        <div class="tab-pane" id="day-range-tab"><%= render "day_ranges/index" %></div>
        <div class="tab-pane" id="location-tab"><%= render "locations/index" %></div>
      </div>
    </div>
  </div>
</div>
