var modal = $("#new-tag-modal");
enable_modal(modal);

<% unless @new_tag.errors.any? %>
	$("#tags-list").html("<%= j render "tags/list" %>");
	$("#tags-list form").trigger("formCreated");

	modal.modal("hide");
<% end %>

modal.find("form").replaceWith("<%= j render "tags/form", tag: @new_tag %>");
modal.find("form").trigger("formCreated");