// if the new tag was made, update the tags list and hide the new tag modal
// the new tag modal gets reset at the end

<% unless @new_tag.errors.any? %>
	$(".tag-list").html("<%= j render 'tags/tag_list' %>");
	$("#new-tag-modal").modal('hide');
<% end %>

$("#new-tag-modal modal-body").html("<%= j render 'tags/new_form' %>");