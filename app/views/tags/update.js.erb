<% unless @tag.errors.any? %>
    $("<%= j "#edit-tag-#{@tag.id}-modal" %>").modal("hide").on("hidden.bs.modal", ".modal", function () {
    	$("#tags-list .list-group").html("<%= j render "tags/list" %>");
    });
<% end %>

$("<%= j "#edit-tag-#{@tag.id}-modal .modal-body" %>").html("<%= j render "tags/form", tag: @tag %>");

$(document).trigger("pageUpdate");