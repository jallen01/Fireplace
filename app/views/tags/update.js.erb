var modal = $("<%= j "#edit-tag-#{@tag.id}-modal" %>");
modal.find(".form-submit-btn").button("reset");
modal.find(".form-cancel-btn").removeClass("disabled");

<% if @tag.errors.any? %>
	modal.find("form").replaceWith("<%= j render "tags/form", tag: @tag %>");
	modal.find("form").trigger("formCreated");
<% else %>
    modal.modal("hide").on("hidden.bs.modal", function () {
    	$("#tags-list").html("<%= j render "tags/list" %>");
    	$("#tags-list form").trigger("formCreated");
    });
<% end %>