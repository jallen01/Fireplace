<!-- Days -->
<div class="form-group">
  <h4>Days</h4>

  <!-- Toggle day range input -->
  <div class="btn-group">
    <%= content_tag :button, "Custom Days", type: "button", class: "btn btn-default #{(tag.day_ranges.empty? ? 'active' : 'disabled')}", id: "day-range-select-toggle" %>
  </div>

  <!-- Predefined day ranges -->
  <div id="day-ranges" class="btn-group" data-toggle="buttons">
    <% current_user.day_ranges.each do |day_range| %>
      <%= content_tag :label, class: "btn btn-default btn-buffer #{(tag.day_ranges.include?(day_range) ? 'active' : '')}" do %>
        <%= check_box_tag "day_ranges[]", day_range.id, tag.day_ranges.include?(day_range) %>
        <%= day_range.name %>
      <% end %> 
    <% end %>
  </div>

  <!-- Day range input -->
  <%= render "day_ranges/select", day_range: tag.hidden_day_range %>
</div>

<hr>

<!-- Times -->
<div class="form-group">
  <h4>Times</h4>

  <!-- Toggle time range input -->
  <div class="btn-group">
    <%= content_tag :button, "Custom Times", type: "button", class: "btn btn-default #{(tag.time_ranges.empty? ? 'active' : 'disabled')}", id: "time-select-toggle" %>
  </div>

  <!-- Predefined time ranges -->
  <div id="time-ranges" class="btn-group" data-toggle="buttons">
    <% current_user.time_ranges.each do |time_range| %>
      <%= content_tag :label, class: "btn btn-default btn-buffer #{(tag.time_ranges.include?(time_range) ? 'active' : '')} #{(tag.time_ranges.empty? ? 'disabled' : '')}" do %>
        <%= check_box_tag "time_ranges[]", time_range.id, tag.time_ranges.include?(time_range) %>
         <%= time_range.name %>
      <% end %> 
    <% end %>
  </div>

  <!-- Time range input -->
  <%= render "time_ranges/select", time_range: tag.hidden_time_range %>
</div>

<hr>

<!-- Locations -->
<div class="form-group">
  <h4>Locations</h4>

  <div id="locations-">
    <% current_user.locations.each do |location| %>
      <%= content_tag :label, class: "btn btn-default btn-buffer #{tag.locations.includes?(location) ? "active" : ""}" do %>
        <%= check_box_tag "locations[]", location.id, tag.locations.include?(location) %>
         <%= location.name %>
      <% end %> 
    <% end %>
  </div>
</div>