<%= form_for tag, remote: true, html: { class: "modal-form" } do |f| %>
  <%= render "layouts/form_errors", errors: tag.errors %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <hr>

  <%= render "tags/metadata_form", tag: tag %>

<% end %>