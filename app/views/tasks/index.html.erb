<% provide(:title, "Tasks") %>
<h1>Listing users</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Task</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %></td>
        <td><%= task.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>