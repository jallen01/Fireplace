<h1>Create Task</h1>

<ul class="nav nav-tabs">
  <li class="active"><a href="#tags">Tags</a></li>
  <li><a href="#custom">Custom</a></li>
</ul>

<div id="form_with_tags">
	<% form_for @new_task do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %><br>
		<%= f.label :content %>
		<%= f.text_area :content %><br>

		<div>
			Choose tags
		</div>
		<% current_user.tags.each do |tag| %>
			<button type="button" class="btn btn-default tag" id=<%=tag.id%> >tag.name</button>
		<% end %>

		<%= hidden_field_tag 'tags' %>

		<%= f.submit 'Create', :class => 'btn btn-primary' %>

	<% end %>
</div>

<div id="form_custom">
	<%= form_for @new_task do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %><br>
		<%= f.label :content %>
		<%= f.text_area :content %><br>

		<div>
			<div>
				Days:
			</div>
			<div>
				<% current_user.day_ranges.each do |day_range| %>
					<button type="button" class="btn btn-default range_days" id=<%=day_range.id%> >day_range.name</button>
