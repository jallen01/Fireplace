					  <input type="checkbox" id="time_7pm"> 7
					</label>
					<label class="btn btn-default">
					  <input type="checkbox" id="time_8pm"> 8
					</label>
					<label class="btn btn-default">
					  <input type="checkbox" id="time_9pm"> 9
					</label>
					<label class="btn btn-default">
					  <input type="checkbox" id="time_10pm"> 10
					</label>
					<label class="btn btn-default">
					  <input type="checkbox" id="time_11pm"> 11
					</label>
				</div>
			</div>
		</div>

		<div>
			<div>
				Locations:
			</div>
			<div>
				<% current_user.locations.each do |location| %>
					<button type="button" class="btn btn-default loc" id=''+<%=location.id%> >location.name</button>
				<% end %>
