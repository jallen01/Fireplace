<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Task</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %></td>
        <td><%= task.content %></td>
      </tr>
      <%= render "layouts/modal_form", modal_id: "edit-task-modal", modal_title: "Edit Task", modal_data: {form: "temporary"}, modal_content: "tasks/edit_form" %>
    <% end %>
  </tbody>
</table>