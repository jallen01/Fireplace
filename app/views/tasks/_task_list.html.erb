<table class="table table-striped table-bordered">
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
      </tr>
      <%= render "layouts/modal_form", modal_id: "edit-task-modal", modal_title: "Edit Task", modal_data: {form: "temporary"}, modal_content: "tasks/edit_form" %>
    <% end %>
  </tbody>
</table>