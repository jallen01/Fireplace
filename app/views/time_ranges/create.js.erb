var modal = $("#new-time-range-modal");
modal.find(".form-submit-btn").button("reset");
modal.find(".form-cancel-btn").removeClass("disabled");

<% unless @new_time_range.errors.any? %>
	$("#time-ranges-list").html("<%= j render "time_ranges/list" %>");
	$("#time-ranges-list form").trigger("formCreated");

	modal.modal('hide');
<% end %>

modal.find("form").replaceWith("<%= j render "time_ranges/form", time_range: @new_time_range %>");
modal.find("form").trigger("formCreated");