<!-- Custom time input -->
<div class="btn-group" data-toggle="buttons" id="time-range-select">

  <% SimpleTime.day_hours.each do |time| %>
    <%= content_tag :label, class: "btn btn-default btn-sm btn-buffer btn-time spec-time #{"active" if time_range.include_time?(time)}".html_safe do %>
      <%= check_box_tag "time_range_select[]", time.hour, time_range.include_time?(time) %>
      <% if (time.hour+1)%3 == 0 %>
        <%= content_tag :h6, time.add(SimpleTime.new(1, 0)).to_time.strftime("%l%P"), class: "time-tick" %>
      <% end %>    
    <% end %>   
  <% end %>
</div>



