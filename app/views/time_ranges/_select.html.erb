<!-- Custom time input -->
<div class="btn-group time-range-select" data-toggle="buttons" >

  <% SimpleTime.day_hours.each do |time| %>

    <%= content_tag :button, class: "btn btn-default btn-sm btn-buffer #{"active" if time_range.include_time?(time)}", type: "button" do %>
      <%= check_box_tag "time_range_select[]", time.hour, time_range.include_time?(time) %>

      <!-- Tick Marks -->
      <% if (time.hour+1)%3 == 0 %>
        <%= content_tag :h6, time.add(SimpleTime.new(1, 0)).to_time.strftime("%l%P"), class: "time-tick" %>
      <% end %>    
    <% end %>   
  <% end %>
</div>



