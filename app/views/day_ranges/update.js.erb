var modal = $("<%= j "#edit-day-range-#{@day_range.id}-modal" %>");
enable_modal(modal);

<% if @day_range.errors.any? %>
	modal.find("form").replaceWith("<%= j render "day_ranges/form", day_range: @day_range %>");
	modal.find("form").trigger("formCreated");
<% else %>
    modal.modal("hide").on("hidden.bs.modal", function () {
    	$("#day-ranges-list").html("<%= j render "day_ranges/list" %>");
    	$("#day-ranges-list form").trigger("formCreated");
    	$("#time-ranges-list").trigger("listUpdated");
    });
<% end %>


