<% @day_ranges.each do |day_range| %>
  <div class="list-group-item">
    <!-- Open day range link -->
    <%= link_to day_range.name, "#edit-day-range-#{day_range.id}-modal", data: { toggle: "modal" } %>

    <!-- Delete day range button -->
    <%= link_to day_range_url(day_range), method: :delete, remote: true, class: "btn btn-default btn-sm list-group-delete" do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
    
    <!-- Edit day range modal -->
    <%= render "layouts/modal_form", object: day_range, modal_id: "edit-day-range-#{day_range.id}-modal", modal_title: "Edit Day Range", modal_content: render("day_ranges/form", day_range: day_range) %>
  </div>
<% end %>