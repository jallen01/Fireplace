<%= form_for day_range, remote: true, html: { class: "modal-form" } do |f| %>
  
  <%= render "layouts/form_errors", errors: day_range.errors %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <hr>

  <div class="form-group center-block">
    <h4>Days</h4>

    <%= render "day_ranges/select", day_range: day_range %>
  </div>

<% end %>