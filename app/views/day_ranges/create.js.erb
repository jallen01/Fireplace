var modal = $("#new-day-range-modal");
modal.find(".form-submit-btn").button("reset");
modal.find(".form-cancel-btn").removeClass("disabled");

<% unless @new_day_range.errors.any? %>
    $("#day-ranges-list").html("<%= j render "day_ranges/list" %>");
    $("#day-ranges-list form").trigger("formCreated");

    modal.modal("hide");
<% end %>

modal.find("form").replaceWith("<%= j render "day_ranges/form", day_range: @new_day_range %>");
modal.find("form").trigger("formCreated");