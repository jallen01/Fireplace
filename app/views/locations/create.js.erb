<% if @location.errors.any? %>
     console.log('Error');
     $(".a-unique-class").html('<%= j render "location_form" %>');

<% else %>
     console.log('Location Added/Saved');

     $('#my-modal').modal('hide');
     
     $("<%= escape_javascript(render(partial: @location, locals: { :current => false })) %>")
         .appendTo("#locations")
         .hide()
         .fadeIn();

     
<% end %>