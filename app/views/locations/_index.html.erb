<div class="list-group" id="locations-list">
  <%= render "locations/list" %>
</div>

<hr>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-location-modal">New Location</button>

<%= render "layouts/modal_form", object: @new_location, modal_id: "new-location-modal", modal_title: "New Location", modal_data: { form: "temporary" }, modal_content: render("locations/form", location: @new_location) %>

<% current_user.get_locations.each do |location| %>
  <%= render "layouts/modal_form", object: location, modal_id: "edit-location-#{location.id}-modal", modal_title: "Edit Location", modal_content: render("locations/form", location: location) %>
<% end %>