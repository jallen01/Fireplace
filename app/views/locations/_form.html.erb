<%= form_for location, remote: true, html: { class: "modal-form" } do |f| %>
  
  <%= render "layouts/form_errors", errors: location.errors %>
  
  <div class="form-group">

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <hr>

  <div class="form-group">
    <%= f.label "Street" %><br>
    <%= text_field(:address_hash, :street, :class => "form-control") %>

    <%= f.label "City" %><br>
    <%= text_field(:address_hash, :city, :class => "form-control") %>

    <%= f.label "Zip" %><br>
    <%= text_field(:address_hash, :zip, :class => "form-control") %>

    <%= f.label "State" %><br>
    <%= text_field(:address_hash, :state, :class => "form-control") %>
  </div>

<% end %>

    