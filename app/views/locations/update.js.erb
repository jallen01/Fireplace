<% unless @location.errors.any? %>
    $("<%= j "#edit-location-#{@location.id}-modal" %>").modal("hide").on("hidden.bs.modal", ".modal", function () {
        $("#locations-list .list-group").html("<%= j render "locations/list", location: @location%>");
    });
<% end %>

$("<%= j "#edit-location-#{@location.id}-modal .modal-body" %>").html("<%= j render "locations/form", location: @location %>");

$("#location<%= @location.id %>").html("<%= @location.name %>");