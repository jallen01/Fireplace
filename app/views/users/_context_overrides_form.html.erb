<%= form_tag update_context_overrides_user_url(current_user), class: "modal-form", remote: true, method: :post do %>
  <div class="form-group">
    <label>Time Frame</label>
    <% time_frames = User::TIME_FRAMES.map { |time_frame| [time_frame.capitalize, time_frame] } %>
    <%= select_tag :time_frame, options_for_select(time_frames, session[:context_overrides][:time_frame]), class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <% locations = current_user.get_locations.map { |location| [location.name, location.id] } %>
    <% locations.insert(0, ["All", nil]) %>
    <%= select_tag :location, options_for_select(locations, session[:context_overrides][:location_id]), class: "form-control" %>
  </div>
<% end %>